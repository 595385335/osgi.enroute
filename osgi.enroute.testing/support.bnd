Bundle-Version:				1.0.0.${tstamp}
Bundle-Description: 		A bundle providing support for OSGi testing. This \
 bundle contains JUnit 4, Mockito and support for OSGi testing based on bnd. The purpose \
 of this bundle is to be used on the test path. For a launcher, it should be included \
 on the launch class path. With the bnd launcher, this exports should be added to \
 the system packages.

Private-Package: \
	osgi.enroute.testing
#
# Get all imports from the classpath and include them
# 
Conditional-Package: !org.osgi.*,*

version-junit = 4.11
version-hamcrest = auto

Export-Package: \
	aQute.bnd.testing;-noimport:=true,\
	org.junit.*;version=${version-junit};-noimport:=true,\
	junit.*;version=${version-junit};-noimport:=true,\
	org.hamcrest;-noimport:=true,\
	org.hamcrest.core;-noimport:=true,\
	org.mockito;-noimport:=true, \
	javax.transaction.*;-noimport:=true
	
Bundle-CompileOnly: true
# TODO
Bundle-License: ${^Bundle-License}

-includeresource: {readme.md}
Import-Package:  \
	COM.jrockit.reflect;resolution:=optional,\
	jrockit.vm;resolution:=optional,\
	sun.reflect;resolution:=optional,\
	*